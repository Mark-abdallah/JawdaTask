@page
@model Product_Task.Web.Pages.Product.ProductInfoModalModel
@{
     Layout = null;
}
<abp-modal>
    <abp-modal-header title="Product Information"></abp-modal-header>
    <abp-modal-body>
        <h3>@Model.Name</h3>
        <div>
            <img src="@Model.Image" />
        </div>
        <p>
            @Model.Price
        </p>
        <p>
            <small><i>Reference: https://acme.com/catalog/</i></small>
        </p>
    </abp-modal-body>
    <abp-modal-footer buttons="Close"></abp-modal-footer>
</abp-modal>
